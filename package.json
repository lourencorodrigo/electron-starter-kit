{
  "name": "electron-starter-kit",
  "version": "1.0.0",
  "description": "Minimal and modern react + electron + webpack starter kit",
  "author": "Rodrigo Louren√ßo da Silva",
  "homepage": "https://github.com/lourencorodrigo/electron-starter-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/lourencorodrigo/electron-starter-kit.git"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "build": "webpack --config webpack.build.config.js",
    "deploy": "yarn build && electron-packager ./ --out=./builds",
    "install": "electron-rebuild",
    "package": "webpack --config webpack.build.config.js",
    "prod": "webpack --config webpack.build.config.js && electron --noDevServer .",
    "start": "webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.0.0",
    "babel-core": "^6.24.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "css-loader": "^0.28.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^9.1.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.6.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "node-sass": "^4.9.3",
    "react": "^16.5.2",
    "react-dev-utils": "^6.0.3",
    "react-dom": "^16.5.2",
    "react-test-renderer": "^16.5.2",
    "redux-mock-store": "^1.5.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.19.0",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>config/jest/animationFrame.js",
      "<rootDir>config/jest.setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/builds/",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "electron": "^1.8.8",
    "electron-rebuild": "^1.8.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0"
  }
}
